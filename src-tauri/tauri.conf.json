{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ebup-viewer",
  "version": "0.1.0",
  "identifier": "com.ebup.viewer",
  "build": {
    "beforeDevCommand": "pnpm --dir ui run dev --host",
    "beforeBuildCommand": "pnpm --dir ui run build",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ebup-viewer",
        "width": 1624,
        "height": 900,
        "minWidth": 1080,
        "minHeight": 680
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}
