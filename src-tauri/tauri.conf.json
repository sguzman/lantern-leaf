{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LanternLeaf",
  "version": "0.1.0",
  "identifier": "io.lanternleaf.desktop",
  "build": {
    "beforeDevCommand": "pnpm --dir ui run dev --host",
    "beforeBuildCommand": "pnpm --dir ui run build",
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "LanternLeaf",
        "width": 1624,
        "height": 900,
        "minWidth": 1080,
        "minHeight": 680
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$HOME/**",
            "$DOWNLOAD/**",
            "$DOCUMENT/**",
            "$DESKTOP/**",
            "$TEMP/**",
            "$CACHE/**",
            "$APPCACHE/**",
            "**/.cache/**"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}
